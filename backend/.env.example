# ===========================================
# Alexandria Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Database Connection
# For local development with Docker: postgresql+asyncpg://postgres:localdev@localhost:5432/alexandria
# For production: Use your hosted PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://postgres:localdev@localhost:5432/alexandria

# Security Keys (IMPORTANT: Generate unique values for production!)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# Cloudflare R2 Storage (Optional - for PDF storage)
# Leave empty if not using R2
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=alexandria-files
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Application Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]

# AI Provider API Keys (Optional - only for running test scripts)
# The actual API keys are added via the Settings page in the UI
# and stored encrypted in the database
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
